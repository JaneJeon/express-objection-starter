{
  "name": "express-objection-starter",
  "version": "0.5.5",
  "description": "an opinionated, production-ready express/knex/objection starter",
  "keywords": [
    "express",
    "objection",
    "knex",
    "starter",
    "template",
    "boilerplate",
    "passport",
    "postgres",
    "mysql",
    "algolia",
    "elasticsearch",
    "redis",
    "api",
    "jsonschema",
    "validation"
  ],
  "repository": "JaneJeon/express-objection-starter",
  "author": "Jane Jeon <JaneJeon9719@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "pm2 start pm2.config.js",
    "start:web": "pm2-runtime start pm2.config.js --only server",
    "start:worker": "pm2-runtime start pm2.config.js --only worker",
    "dev": "run-p dev:*",
    "dev:web": "nodemon server",
    "dev:worker": "nodemon worker",
    "dev:mail": "maildev",
    "dev:yaml": "yarn lint:all:yaml --watch",
    "pretest": "yarn setup",
    "test": "run-p dev:mail test:* --race",
    "test:unit": "wait-on http://localhost:1080 && jest",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "lint:prettier": "prettier --write",
    "lint:yaml": "yaml2json --save",
    "lint:all:prettier": "yarn lint:prettier '**/*.{js,json,css,scss,vue,html,md}'",
    "lint:all:yaml": "yarn lint:yaml config --recursive",
    "setup": "run-s lint:all:yaml migrate"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.2.0",
    "ajv-keywords": "^3.4.1",
    "algoliasearch": "^3.33.0",
    "aws-sdk": "^2.466.0",
    "axios": "^0.19.0",
    "bull": "^3.10.0",
    "cloudinary": "^1.14.0",
    "connect-redis": "^3.4.2",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dayjs": "^1.8.14",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-query-boolean": "^2.0.0",
    "express-rate-limit": "^4.0.4",
    "express-session": "^1.16.1",
    "express-sslify": "^1.2.0",
    "express-ws": "^4.0.0",
    "helmet": "^3.18.0",
    "http-assert": "^1.4.1",
    "ioredis": "^4.9.5",
    "knex": "^0.17.2",
    "lodash": "^4.17.11",
    "mailchecker": "^3.2.35",
    "mssql": "^5.1.0",
    "mysql": "^2.17.1",
    "mysql2": "^1.6.5",
    "nanoid": "^2.0.3",
    "nconf": "^0.10.0",
    "nodemailer": "^6.2.1",
    "normalize-email": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "objection": "^1.6.9",
    "objection-db-errors": "^1.1.1",
    "objection-find": "^1.6.5",
    "objection-password": "^2.0.0",
    "objection-soft-delete": "^1.0.7",
    "objection-table-name": "^1.0.0",
    "objection-visibility": "^0.4.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "pino": "^5.13.1",
    "pm2": "^3.5.1",
    "rate-limit-redis": "^1.6.0",
    "sharp": "^0.22.1",
    "sqlite3": "^4.0.9",
    "ua-parser-js": "^0.7.20",
    "yamljs": "^0.3.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "cross-env": "^5.2.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "maildev": "^1.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "objection-gen": "^0.5.2",
    "pino-pretty": "^3.2.0",
    "prettier": "^1.17.1",
    "supertest-session": "^4.0.0",
    "wait-on": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "post-merge": "yarn install && yarn setup"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,yml,yaml}": [
      "yarn lint:prettier",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "migrations/",
      "seeds/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
